<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.care.mybatis.myMapper">
 
 	<!-- 회원가입 정보 입력 받기 -->
	<insert id="saveUserInfo" parameterType="dto">
		insert into memberinfo(id,pwd,name,tel,birth) values(#{id},#{pwd},#{name},#{tel},#{birth})
	</insert>
	
	<select id="loginChk" parameterType="dto" resultType="dto">
		select * from memberinfo where id=#{id} and pwd=#{pwd}
	</select>
</mapper>
