<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.care.mybatis.productMapper.productMapper">
	<!-- ID 혹은 전화번호로 검색-->
	<select id="AllListMen" resultType="Pdto">
		select * from product where gender='남자' or gender='공용'
	</select>
	<!--  비밀번호 수정 -->
	<update id="pwdUpdate" parameterType="dto" >
		update memberInfo set pwd=#{pwd} where id=#{id}
	</update>
</mapper>

